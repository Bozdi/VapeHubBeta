<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VapeHubBeta" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/vapeHubOrange</item>
        <item name="colorPrimaryVariant">@color/vapeHubOrange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/vapeHubBackground</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/vapeHubBackground</item>
        <item name="android:colorPrimaryDark">@color/vapeHubOrange</item>
    </style>
    <style name="EditTextStyle17">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/vapeHubText</item>
        <item name="android:textColorHint">@color/vapeHubText</item>
        <item name="backgroundTint">@color/vapeHubOrange</item>
    </style>

    <style name="EditTextStyle20">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/vapeHubText</item>
        <item name="android:textColorHint">@color/vapeHubText</item>
        <item name="backgroundTint">@color/vapeHubOrange</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/vapeHubBackground</item>
        <item name="backgroundTint">@color/vapeHubOrange</item>
    </style>

</resources>